generator client {
  provider = "prisma-client-js"
  output   = ".generated"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               String        @id @unique @default(uuid())
  email            String        @unique
  name             String
  age              DateTime      @db.Date
  password         String
  verfifiedAccount Boolean
  UserMetrics      UserMetrics[]
}

model UserMetrics {
  id                  String   @id @unique @default(uuid())
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId              String
  lastLogginTime      DateTime
  lastAppUseTime      Int
  lastContentType     String?
  lastContentCategory String?
  videosWatched       Int
}
